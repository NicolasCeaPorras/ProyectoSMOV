<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoapp2"
    android:forceDarkAllowed="false"
    >



<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center">

    <Button
        android:id="@+id/buttonFichar"
        android:onClick="onClick"
        android:layout_width="115dp"
        android:layout_height="79dp"
        android:backgroundTint="#0A43AC"
        android:text="@string/entrada" />

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center">

    <Spinner
        android:id="@+id/selOficina"
        android:background="@drawable/back"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:text="@string/selOfic">
    </Spinner>
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <com.example.proyectosmov.MyVectorClock
            android:id="@+id/clock"
            android:layout_width="300dp"
            android:layout_height="205dp"
            android:layout_gravity="center" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/back"
    >

    <TextView
        android:text="@string/hora"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:textColor="#0A43AC"
        android:fontFamily="sans-serif-black"
        android:textSize="22sp"
        android:layout_marginLeft="10dp">

    </TextView>
    <TextView
        android:id="@+id/actualhora"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="22sp"
        android:textColor="#0A43AC"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="10dp">

    </TextView>
</LinearLayout>
    <LinearLayout
        android:background="@drawable/back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4pt"
                app:srcCompat="@drawable/icono_entrar"></ImageView>

                <TextView
                    android:text="@string/horaentrada"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:textColor="#0A43AC"
                    android:fontFamily="sans-serif-black"
                    android:textSize="20sp">
                </TextView>

            <TextView
                android:id="@+id/horaentrada"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="#0A43AC"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp">
            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4pt"
                app:srcCompat="@drawable/icono_salir"></ImageView>

            <TextView
                android:text="@string/horasalida"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:textColor="#0A43AC"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/horasalida"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="#0A43AC"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>