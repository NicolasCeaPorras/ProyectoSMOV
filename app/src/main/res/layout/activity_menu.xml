<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondoapp3"
    android:orientation="vertical"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imagenPerfil"
            android:layout_width="112dp"
            android:layout_height="40pt"
            android:layout_marginTop="13pt"
            android:layout_marginBottom="13pt"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:context=".Menu">

            <TextView
                android:id="@+id/textoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="11pt" />

            <TextView
                android:id="@+id/textoEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:textSize="8pt" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#505050"/>
    <LinearLayout
        android:id="@+id/fichar"
        android:onClick="clickFichar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".Menu">


        <ImageView
            android:id="@+id/imagenFichar"
            android:layout_width="10dp"
            android:layout_height="27pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_fichar" />

        <TextView
            android:id="@+id/textoFichar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fichar"
            android:textColor="@color/black"
            android:textSize="10pt" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickAgenda"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imagenAgenda"
            android:layout_width="30dp"
            android:layout_height="25pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_agenda" />
        <TextView
            android:id="@+id/textoAgenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/agenda" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickVacaciones"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imagenVacaciones"
            android:layout_width="74dp"
            android:layout_height="25pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_vacaciones" />

        <TextView
            android:id="@+id/textoVacaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/vacaciones"
            android:textColor="@color/black"
            android:textSize="10pt" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickOrganigrama"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imagenOrganigrama"
            android:layout_width="91dp"
            android:layout_height="25pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_organigrama"></ImageView>
        <TextView
            android:id="@+id/textoOrganigrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/organigrama" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
    <LinearLayout
        android:id="@+id/gestionUsuarios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:onClick="clickGestionUsuarios"
        android:visibility="invisible"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imagenGestionUsuarios"
            android:layout_width="167dp"
            android:layout_height="25pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_gestion_usuarios"></ImageView>
        <TextView
            android:id="@+id/textoGestionUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="@string/gestionUsuario" />
    </LinearLayout>
    <View
        android:id="@+id/lineaGestionUsuarios"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickMiPresencia"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/miPresencia"
            android:layout_width="89dp"
            android:layout_height="25pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_mi_presencia"></ImageView>
        <TextView
            android:id="@+id/textoMiPresencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/miPresencia" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickCerrarSesion"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imagenCerrarSesion"
            android:layout_width="95dp"
            android:layout_height="25pt"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_cerrar_sesion"></ImageView>
        <TextView
            android:id="@+id/textoCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/cerrar_sesion" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#505050"/>
</LinearLayout>