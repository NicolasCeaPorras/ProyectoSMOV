<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VacacionesActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/back"
        android:layout_margin="5dp"
        >

        <CalendarView
            android:id="@+id/vacaCalendario"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="@drawable/back"
        android:gravity="top"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp">

            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back"
                android:fontFamily="sans-serif-black"
                android:text="@string/diasvaca"
                android:textSize="28sp">
            </TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/diasVaca"
                android:textSize="28sp">

            </TextView>

        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fechaSal"
            android:layout_marginLeft="30dp">
        </TextView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:onClick="clickFechaSal"
                android:fontFamily="sans-serif-black"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/fechSal"
                android:background="@drawable/back"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                >

            </TextView>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/icono_agenda">

            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fechaReg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">
        </TextView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:onClick="clickFechaReg"
                android:fontFamily="sans-serif-black"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/fechReg"
                android:background="@drawable/back"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:layout_marginLeft="30dp">

            </TextView>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/icono_agenda">

            </ImageView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonFichar"
            android:onClick="onClickGuardar"
            android:layout_width="115dp"
            android:layout_height="79dp"
            android:text="@string/guardar" />

    </LinearLayout>
</LinearLayout>